{% extends 'base.html.twig' %}

{% block title %}New Message{% endblock %}

 {% block stylesheets %}
     {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/sendMessageForm.css') }}">
        <link rel="stylesheet" href="{{ asset('css/messageView.css') }}">

 {% endblock %}

{% block javascripts %}
         <script src="{{ asset('/js/currentMsgReplyForm.js') }}"></script>
{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('user_mailbox') }}">All Messages</a></li>
            <li class="breadcrumb-item active">Message from - <strong>{{ message.sender.fullName }} </strong> - </li>
        </ol>
    </nav>
{% endblock %}

{% block main %}
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h4>About: {{ message.about }}</h4>
                <ul class="timeline">
                    <li>
                        <a target="_blank" href=""></a>
                        <a class="float-right">{{ message.about }}</a>
                        <p>{{ message.content }}</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="text-muted mt-5 mb-5 text-center small">by : <a class="text-muted" target="_blank" href="">{{ message.sender.email }}</a></div>

    <button class="btn btn-success btn-sm" id="btnMessage">Reply <i class="fa fa-reply"></i></button>
    <div id="form"></div>

{% endblock %}

