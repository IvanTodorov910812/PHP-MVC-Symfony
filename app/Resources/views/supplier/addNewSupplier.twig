{% extends 'base.html.twig' %}

{% block title %}New Supplier{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('allSuppliers') }}">All Suppliers </a></li>
            <li class="breadcrumb-item active" aria-current="page">New Supplier</li>
        </ol>
    </nav>
{% endblock %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" method="post">
                <input type="hidden" name="user[_token]" value="{{ csrf_token('user') }}"/>
                <fieldset>
                    <legend>Add New Supplier</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="supplier_name">Name</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="supplier_name" placeholder="Name" name="supplier[name]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="supplier_description">Description</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="supplier_description" placeholder="Description" name="supplier[description]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="supplier_email">Email</label>
                        <div class="col-sm-4">
                            <input type="email" class="form-control" id="supplier_email" placeholder="Email" name="supplier[email]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="supplier_telefon">Telefon</label>
                        <div class="col-sm-4">
                            <input type="tel" class="form-control" id="supplier_telefon" placeholder="Telefon" name="supplier[telefon]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="supplier_city">City</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="supplier_city" placeholder="City" name="supplier[city]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="supplier_street">Street</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="supplier_street" placeholder="Street" name="supplier[street]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('homepage') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                    {{  form_row(form._token) }}
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}
